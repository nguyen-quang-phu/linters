{
  "compilerOptions": {
    /* Core */
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,

    /* Modern JS / top-level await */
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],

    /* React */
    "jsx": "react-jsx",

    /* Module resolution */
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@lumin-tokens/static": ["../node_modules/@lumin-ui/dist/design-tokens/growth-templates/js"],
      "@lumin-tokens/kiwi": ["../node_modules/@lumin-ui/dist/design-tokens/kiwi/js"],
      "@lumin-tokens/kiwi/*": ["../node_modules/@lumin-ui/dist/design-tokens/kiwi/js/*"],
      "@lumin-tokens": ["../node_modules/@lumin-ui/dist/design-tokens/koala/js"],
      "@lumin-tokens/*": ["../node_modules/@lumin-ui/dist/design-tokens/koala/js/*"],
      "@lumin-ui/kiwi": ["../node_modules/@lumin-ui/dist/kiwi-ui"],
      "@lumin-tokens/kauri": ["../node_modules/@lumin-ui/dist/design-tokens/kauri/js"],
      "@lumin-tokens/kauri/*": ["../node_modules/@lumin-ui/dist/design-tokens/kauri/js/*"]
    },

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Strictness (JS-friendly) */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "useUnknownInCatchVariables": false,

    /* Quality */
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Types */
    "typeRoots": ["./node_modules/@types"],

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noUnusedParameters": true,
  },
  "exclude": ["node_modules", "dist", "build"]
}
